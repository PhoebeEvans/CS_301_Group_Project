<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.maandparailroadapp.FirstFragment"
        android:label="Ma and Pa Railroad"
        tools:layout="@layout/fragment_first">
        <!-- android:label="@string/first_fragment_label" -->
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.maandparailroadapp.SecondFragment"
        android:label="Details"
        tools:layout="@layout/fragment_second">
        <!-- android:label="@string/second_fragment_label" -->
        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/GalleryFragment"
        android:name="com.example.maandparailroadapp.GalleryFragment"
        android:label="Gallery" />

    <fragment
        android:id="@+id/VillageFragment"
        android:name="com.example.maandparailroadapp.VillageFragment"
        android:label="Village Info" />

    <fragment
        android:id="@+id/TrainRideFragment"
        android:name="com.example.maandparailroadapp.TrainRideFragment"
        android:label="Train Rides" />

    <fragment
        android:id="@+id/HoursFragment"
        android:name="com.example.maandparailroadapp.HoursFragment"
        android:label="Hours" />

    <fragment
        android:id="@+id/EventsFragment"
        android:name="com.example.maandparailroadapp.EventsFragment"
        android:label="Events" />

    <fragment
        android:id="@+id/DirectionsFragment"
        android:name="com.example.maandparailroadapp.DirectionsFragment"
        android:label="Directions" />

    <fragment
        android:id="@+id/ContactFragment"
        android:name="com.example.maandparailroadapp.ContactFragment"
        android:label="Contact" />

</navigation>